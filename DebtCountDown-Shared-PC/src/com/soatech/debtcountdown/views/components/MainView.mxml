<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:components="com.soatech.debtcountdown.views.components.*"
		 implements="com.soatech.debtcountdown.views.interfaces.IMainView">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<fx:Script>
		<![CDATA[
			public function get mainStack():ViewStack
			{
				return _mainStack;
			}
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	
	<mx:ViewStack id="_mainStack" width="100%" height="100%">
		<s:NavigatorContent label="Splash Screen">
			<s:Group width="100%" height="100%">
				
			</s:Group>
		</s:NavigatorContent>
		<s:NavigatorContent label="Select a Plan">
			<s:VGroup width="100%" height="100%">
				<s:ButtonBar dataProvider="{selectStack}" width="100%" />
				
				<mx:ViewStack id="selectStack" width="100%" height="100%">
					<s:NavigatorContent label="Manage Plans">
						<components:PlanSelect width="100%" height="100%" />
					</s:NavigatorContent>
					
					<s:NavigatorContent label="Manage Debts">
						<components:DebtSelect width="100%" height="100%" />
					</s:NavigatorContent>
				</mx:ViewStack>
			</s:VGroup>
		</s:NavigatorContent>
		
		<s:NavigatorContent>
			<components:PlanEdit width="100%" height="100%" />
		</s:NavigatorContent>
		
		<s:NavigatorContent>
			<components:DebtEdit width="100%" height="100%" />
		</s:NavigatorContent>
		
		<s:NavigatorContent>
			<components:DebtSelect width="100%" height="100%" />
		</s:NavigatorContent>
		
		<s:NavigatorContent>
			<components:RunPlan width="100%" height="100%" />
		</s:NavigatorContent>
		
		<s:NavigatorContent>
			<components:PaymentPlan width="100%" height="100%" />
		</s:NavigatorContent>
		
	</mx:ViewStack>
</s:Group>
